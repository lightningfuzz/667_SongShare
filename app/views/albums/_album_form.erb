<%= form_for(@album, url: @url, :html => { :class => "form-horizontal" }) do |f| %>
	<fieldset>
    	<legend>Album Information</legend>

        
        <%= f.label :title, "Title" %>
        <%= f.text_field :title%>
            
        <%= f.label :release_date, "Release Date" %>
        <%= f.text_field :release_date%>
            
        <%= f.label :genre, "Genre: " %>
        <%= f.text_field :genre%>
            
        <%= f.label :credits, "Credits" %>
        <%= f.text_field :credits%>
            
        <%= f.label :album_artwork_url, "Album Cover:" %>
        <%= f.file_field :album_artwork_url %>

        <%= f.hidden_field :artist_id, value: @artist.id%>

        <%= f.submit @submit, class: "btn btn-large btn-primary signup-button" %>
    </fieldset>
<%end%>

