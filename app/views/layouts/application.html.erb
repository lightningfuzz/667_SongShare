<!DOCTYPE html>
<html>
<head>
  <title>SongShare - <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
</head>
<body>
<nav class="navbar navbar-default navbar-custom navbar-fixed-top" role="navigation">

  <%= image_tag "logo.png", :class => "navbar-left" %>
  <form class="navbar-form navbar-right" role="search">

    <ul class="nav navbar-nav">
      <!-- IF signed in as Artist, display this in navigation bar -->
      <% if signed_in? %>
          <li><%= link_to "Users", '#' %></li> <!-- will add username retrieval later-->
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_artist %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", artist_signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          
       <!-- IF signed in as Fan -->
       <% elsif current_fan %>
          <li><%= link_to current_fan.name, '#'%> </li>
          <li id="fat-menu" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_fan %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "sign_out" %>
              </li>
            </ul>
          </li>

          <!-- THIS HTML is displayed If NOT SIGNED IN as a user of some sort -->
      <% else %> <!-- If NOT SIGNED IN as ARTIST -->
          <li><%= link_to "Sign in", artist_signin_path %></li>


      <li><%= link_to "Sign Up", artist_sign_up_path %></li>
    </ul>
	<% end %>
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  </ul>
</nav>
<%= yield %>
      <footer>
      Saved!
      </footer>
</body>
</html>
