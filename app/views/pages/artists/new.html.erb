<!--ABOUT: This is the Artist sign up page -->

<% #provide(:title, 'Sign up') %>

<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%=
        #after form submission, form symbols below get placed in a hash named "artist" nested in the params[] hash
        # i.e. params[:artist][:email]
        form_for(@artist), :url => :action => 'create' do |f| %>

         <!-- Form Data Validation -->
        <% if @artist.errors.any? # .any? returns true if any values in hash, similar but opposite to .empty?%>
            <div id="error_explanation">
              <div class="alert alert-error">
                The form contains <%= pluralize(@artist.errors.count, "error")%>  <!-- count returns number of errors -->
              </div>
              <ul>
                <% @artist.errors.full_messages.each do |msg| %>
                    <li>* <%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <!--/Form Validation end -->

        <!-- The actual form. Rails converts this to html -->
        <%= render 'shared/error_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>