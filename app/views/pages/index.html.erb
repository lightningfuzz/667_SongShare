    <div class="container">
	  	<h3>
      		SongShare is a place for artists and their fans to connect and share music to the world.
      	</h3>
        <fieldset>
        	<legend align="left">What's New?</legend>
        	<table width="100%" border="0" cellspacing="0" cellpadding="0">
            	<tr align=center>
					<%count = 0%>
					<% @albums.each do |album| %>
						<% count++ %>
						<td>
							<%= link_to (image_tag album.album_artwork_url, width: '175', height: '175', :class => "img-thumbnail"), 
                            '/albums/' + album.id.to_s %>
							<h4><%= link_to album.title, '/albums/'+album.id.to_s %></h4>
							<% artist = @artist %>
							<h6> By <%= link_to artist.name, '/artists/'+@artist.id.to_s %></h6>
						</td>
						<% break if (count == 4) %>
					<% end %>
           	  </tr>
          </table>
        </fieldset>
		<fieldset>
        	<legend align="left">Just Released</legend>
        	<table width="100%" border="0" cellspacing="0" cellpadding="0">
            	<tr align=center>
					<%count = 0%>
					<%@albums.each do |album| %>
						<% count++ %>
						<td>
							<%= link_to (image_tag album.album_artwork_url, width: '175', height: '175', :class => "img-thumbnail"), 
                            '/albums/' + album.id.to_s %>
							<h4><%= link_to album.title, '/albums/'+album.id.to_s %></h4>
							<% artist = @artist %>
							<h6> By <%= link_to artist.name, '/artists/'+@artist.id.to_s %></h6>
						</td>
						<% break if (count == 4) %>
					<% end %>
           	  </tr>
          </table>
        </fieldset>
      </div>